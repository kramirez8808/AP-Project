@{
    ViewData["Title"] = "Batalla Pokémon";
}

<h2>@ViewData["Title"]</h2>

<div id="battleInfo">
    <h3>¡La batalla ha comenzado!</h3>

    <div class="pokemonInfo">
        <div id="pokemon1Info">
            <h4>@Model.Pokemon1.Nickname</h4>
            <p><strong>Tipo:</strong> @Model.Pokemon1.Type</p>
            <p><strong>HP:</strong> <span id="pokemon1Hp">@Model.Pokemon1.HP</span></p>
        </div>

        <div id="pokemon2Info">
            <h4>@Model.Pokemon2.Nickname</h4>
            <p><strong>Tipo:</strong> @Model.Pokemon2.Type</p>
            <p><strong>HP:</strong> <span id="pokemon2Hp">@Model.Pokemon2.HP</span></p>
        </div>
    </div>

    <div id="battleResult" style="display: none;">
        <h3 id="winnerMessage"></h3>
        <button onclick="location.href='@Url.Action("Index", "Pokemon")'">Volver a la lista de Pokémon</button>
    </div>

    <div id="actionButtons">
        <button id="startBattleButton" onclick="startBattle()">Iniciar Batalla</button>
    </div>
</div>
